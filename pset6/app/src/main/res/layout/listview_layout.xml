<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorDarkMode"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:id="@+id/listViewLayout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/rowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/favView"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginLeft="1sp"
                android:padding="18dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:background="@color/colorWhite"
                card_view:srcCompat="@drawable/plus_icon"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/albumView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/rankView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2sp"
                android:gravity="center"
                android:textColor="@color/colorDarkMode"
                android:textSize="20sp"
                android:text="2000" />

            <TextView
                android:id="@+id/trackView"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2sp"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:textColor="@color/colorDarkMode"
                android:textSize="12sp"
                android:text="Politik" />

            <TextView
                android:id="@+id/artistView"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2sp"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:textColor="@color/colorDarkMode"
                android:textSize="12sp"
                android:text="Coldplay" />

            <TextView
                android:id="@+id/yearView"
                android:layout_width="34dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorDarkMode"
                android:textAlignment="gravity"
                android:textSize="12sp"
                android:text="2002" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>